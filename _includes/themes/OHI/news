		{% endif %}
		
			<article class="post">
				<h2><a href="{{ post.url }}">{{ post.title }}</a></h2>
				<time class="post-date" datetime="{{ post.date }}">{{ post.date | date: "%B %d, %Y" }}</time>
				<div>
					{{ post.excerpt }}
					<a href="{{ post.url }}" class="more-link">Read More...</a>
				</div>
			</article>		
		
	{% endfor %}
	
</section>

